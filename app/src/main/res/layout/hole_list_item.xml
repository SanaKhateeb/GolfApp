<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/hole_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="10"
            android:text="..."
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Hole 8:"/>

        <TextView
            android:id="@+id/num_hole_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/minus_button"
            android:layout_toRightOf="@+id/hole_label"
            android:layout_toStartOf="@+id/minus_button"
            android:layout_weight="70"
            android:text="--"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:text="99"/>

        <Button
            android:id="@+id/minus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/plus_button"
            android:layout_toStartOf="@+id/plus_button"
            android:minHeight="0dp"
            android:minWidth="10dp"
            android:maxWidth="15dp"
            android:layout_weight="10"
            android:text="-"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/plus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:minHeight="0dp"
            android:minWidth="10dp"
            android:maxWidth="15dp"
            android:layout_weight="10"
            android:text="+"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>